<Window x:Class="EmployeeClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="社員管理システム" Height="500" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="名前:" Width="50"/>
                <TextBox x:Name="NameBox" Width="150"/>
                <Label Content="部署:" Width="50" Margin="10,0,0,0"/>
                <TextBox x:Name="DeptBox" Width="150"/>
                <Label Content="入社日:" Width="60" Margin="10,0,0,0"/>
                <DatePicker x:Name="HireDatePicker" Width="150"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="追加" Width="100" Click="Add_Click"/>
                <Button Content="更新" Width="100" Margin="10,0,0,0" Click="Update_Click"/>
                <Button Content="削除" Width="100" Margin="10,0,0,0" Click="Delete_Click"/>
                <Button Content="再読込" Width="100" Margin="10,0,0,0" Click="Reload_Click"/>
            </StackPanel>

            <DataGrid x:Name="EmployeeGrid" AutoGenerateColumns="True" Height="350"
                      SelectionChanged="EmployeeGrid_SelectionChanged"/>
        </StackPanel>
    </Grid>
</Window>
